{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": "dist",
    "rootDir": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "include": [
    "netlify/functions/**/*.ts",
    "db/**/*.ts",
    "shared/**/*.ts",
    "adapters/**/*.ts",
    "src/**/*.ts",
    "src/**/*.d.ts"
  ]
}
